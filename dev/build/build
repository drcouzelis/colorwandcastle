#!/usr/bin/bash

[ "${EUID}" -eq 0 ] && echo "ERROR: Do not run as root." && exit 1

source "$(dirname ${0})"/settings

# Build

# If there's no Makefile, then do a refresh
if [ ! -f "${BUILD_workarea_path}"/build/Makefile ]; then
    "$(dirname ${0})"/refresh
fi

# make && make install
make -C "${BUILD_workarea_path}"/build install
